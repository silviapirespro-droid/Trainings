<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <!-- ===== TYPE ADRESSE ===== -->
  <xs:complexType name="AdresseType">
    <xs:sequence>
      <xs:element name="rue" type="xs:string"/>
      <xs:element name="ville" type="xs:string"/>
      <xs:element name="codePostal">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:pattern value="[0-9]{5}"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:element>
      <xs:element name="pays" type="xs:string"/>
    </xs:sequence>
  </xs:complexType>

  <!-- ===== TYPE CLIENT ===== -->
  <xs:complexType name="ClientType">
    <xs:sequence>
      <xs:element name="nom" type="xs:string"/>
      <xs:element name="email" type="xs:string"/>
      <xs:element name="telephone" minOccurs="0"/>
      <xs:element name="adresse" type="AdresseType"/>
    </xs:sequence>
    <xs:attribute name="id" type="xs:int" use="required"/>
    <xs:attribute name="type" use="required">
      <xs:simpleType>
        <xs:restriction base="xs:string">
          <xs:enumeration value="PARTICULIER"/>
          <xs:enumeration value="ENTREPRISE"/>
        </xs:restriction>
      </xs:simpleType>
    </xs:attribute>
  </xs:complexType>

  <!-- ===== TYPE LIGNE DE FACTURE ===== -->
  <xs:complexType name="LigneFactureType">
    <xs:sequence>
      <xs:element name="designation" type="xs:string"/>
      <xs:element name="quantite">
        <xs:simpleType>
          <xs:restriction base="xs:int">
            <xs:minInclusive value="1"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:element>
      <xs:element name="prixUnitaire" type="xs:decimal"/>
      <xs:element name="tauxTVA">
        <xs:simpleType>
          <xs:restriction base="xs:decimal">
            <xs:enumeration value="0"/>
            <xs:enumeration value="5.5"/>
            <xs:enumeration value="10"/>
            <xs:enumeration value="20"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:element>
    </xs:sequence>
    <xs:attribute name="reference" type="xs:string" use="required"/>
  </xs:complexType>

  <!-- ===== TYPE FACTURE ===== -->
  <xs:element name="facture">
    <xs:complexType>
      <xs:sequence>

        <xs:element name="client" type="ClientType"/>

        <xs:element name="lignes">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="ligne" type="LigneFactureType" maxOccurs="unbounded"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>

        <xs:element name="totalHT" type="xs:decimal"/>
        <xs:element name="totalTVA" type="xs:decimal"/>
        <xs:element name="totalTTC" type="xs:decimal"/>

      </xs:sequence>

      <xs:attribute name="numero" type="xs:string" use="required"/>
      <xs:attribute name="date" type="xs:date" use="required"/>
      <xs:attribute name="devise" default="EUR"/>

    </xs:complexType>
  </xs:element>

</xs:schema>
